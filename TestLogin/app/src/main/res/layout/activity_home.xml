<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Home">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Icon Menu -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:padding="8dp"
            android:background="@color/black" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý thiết bị"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_camera"
            android:padding="8dp"
            android:background="@drawable/customs_button_home"
            android:backgroundTint="@color/black" />
    </LinearLayout>

    <!-- Layout chứa các nút chức năng (Sử dụng LinearLayout thay GridLayout) -->

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Hàng 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLoaiThietBi"
                style="@style/CustomButton"
                android:layout_height="119dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/image_thietbi"
                android:text="Loại thiết bị"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnThietBi"
                style="@style/CustomButton"
                android:layout_weight="1"
                android:drawableTop="@mipmap/image_thietbi"
                android:text="Thiết bị"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- Hàng 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChiTietSuDung"
                style="@style/CustomButton"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/image_thietbi"

                android:text="Chi tiết"

                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnPhongHoc"
                style="@style/CustomButton"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/image_thietbi"
                android:text="Phòng học"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- Hàng 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNhanVien"
                style="@style/CustomButton"
                android:layout_weight="1"
                android:drawableTop="@mipmap/image_thietbi"
                android:text="Nhân viên"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnThongKe"
                style="@style/CustomButton"
                android:layout_weight="1"
                android:drawableTop="@mipmap/image_thietbi"
                android:text="Thống kê"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_footer"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cài đặt"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/customs_button_home"
            app:backgroundTint="@null"
            android:padding="10dp"
            android:gravity="center"
            android:elevation="4dp" />

        <View
            android:layout_width="11dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Đăng xuất"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/customs_button_home"
            app:backgroundTint="@null"
            android:padding="10dp"
            android:gravity="center"
            android:elevation="4dp"/>
    </LinearLayout>


</LinearLayout>